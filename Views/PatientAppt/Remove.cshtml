@model MedicalOffice.Models.Appointment

@{
    ViewData["Title"] = "Remove Appointment";
}


<h2>Remove Appointment for Patient: @Model.Patient.FullName</h2>

<h3>Are you sure you want to delete this Appointment?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.appDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.appDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.extraFee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.extraFee)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApptReason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApptReason.ReasonName)
        </dd>
    </dl>

    <form asp-action="Remove">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href='@ViewData["returnURL"]'>Back to Patient</a>
    </form>
</div>
